<%= render "shared/errors", obj: @location %>
<%= form_for(@location, html: { multipart: true }) do |f| %>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :name, "Name:" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :point_of_contact, "Point of Contact:" %>
        <%= f.text_field :point_of_contact, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :contact_number, "Contact Number:" %>
        <%= f.text_field :contact_number, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <%= f.fields_for :address do |a| %>
      <div class="form-group">
        <%= a.label :line_1, "Line 1:" %>
        <%= a.text_field :line_1, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= a.label :line_2, "Line 2:" %>
        <%= a.text_field :line_2, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= a.label :city, "City:" %>
        <%= a.text_field :city, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= a.label :postcode, "Postcode:" %>
        <%= a.text_field :postcode, class: "form-control" %>
      </div>
      <% end %>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :max_occupancy, "Max Occupancy:" %>
        <%= f.text_field :max_occupancy, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :size, "Size:" %>
        <%= f.text_field :size, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="form-group">
        <%= f.label :price, "Price:" %>
        <%= f.text_field :price, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :features, "Features:" %>
        <%= f.select(:features, Location.location_features_options, {}, {multiple: true, class: "form-control"}) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <div class="form-group">
        <%= f.label :description, "Description:" %>
        <%= f.text_area :description, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-4">
      <%= f.submit "Create", class: "btn btn-primary btn-block" %>
    </div>
  </div>
<% end %>
